<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Available Cruises</title>
</head>
<body>
    <h1>Available Cruises</h1>
    <div id="cruise-list"></div>

    <script>
        async function fetchCruises(userInput) {
            const endpoint = 'http://rest.api.cruisehost.net';
            const email = 'sofiayousif42@gmail.com';
            const password = 'CfDtGA99';
            const token = '100|rpwdRN5Ay3zjLuwmILO8TjTSUvYfpmlzxsD8r97y';
            const agency = '210479';

            try {
                const response = await fetch(`${endpoint}/search`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    },
                    body: JSON.stringify({
                        email: email,
                        password: password,
                        agency: agency,
                        query: userInput
                    })
                });

                if (!response.ok) {
                    throw new Error(`Error: ${response.statusText}`);
                }

                const data = await response.json();
                displayCruises(data);
            } catch (error) {
                console.error('Error fetching cruises:', error);
            }
        }

        function displayCruises(cruises) {
            const cruiseList = document.getElementById('cruise-list');
            cruiseList.innerHTML = '';

            cruises.forEach(cruise => {
                const cruiseItem = document.createElement('div');
                cruiseItem.innerHTML = `
                    <h2>${cruise.name}</h2>
                    <p>Departure: ${cruise.departure}</p>
                    <p>Arrival: ${cruise.arrival}</p>
                    <p>Duration: ${cruise.duration}</p>
                `;
                cruiseList.appendChild(cruiseItem);
            });
        }

        // Example usage with user input
        const userInput = 'Mediterranean'; // Replace with actual user input
        fetchCruises(userInput);
    </script>
</body>
